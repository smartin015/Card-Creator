<div class="card front {{ cardType }} {{ class }}">
  <div class="contents">
    <header>
      <div class="health mdl-badge" data-badge="1">{{ health }} {{> icon img='hp' }}</div>
      <div class="name">{{{ Name }}}</div>
    </header>
    <article>
      {{#if ongoing1}}
        <div class="ongoing mdl-badge-left" data-badge="2">{{{ ongoing1 }}}</div>
        <div class="ongoing">{{{ ongoing2 }}}</div>
      {{/if}}
      {{#if Surge}}
        <div class="surge mdl-badge-left" data-badge="3"><strong>Surge: </strong>{{{ Surge }}}</div>
      {{/if}}
    </article>
    <footer>
      <div class="flavortext">{{{ flavortext }}}</div>
      <div class="tier mdl-badge" data-badge="4">{{romanize tier }}</div>
      <div class="cardType">{{ class }}</div>
    </footer>
  </div>
</div>