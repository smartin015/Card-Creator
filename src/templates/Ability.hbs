<div class="card front {{{ cardType }}} {{{ class }}}">
  <div class="contents">
    <header>
      <div class="name">{{{ Name }}}</div>
      {{#if type}}
        <div class="abilityType mdl-badge" data-badge="1">{{{ type }}}</div>
      {{/if}}
    </header>
    <article>
      <div class="indicators">
        <div class="risk mdl-badge-left" data-badge="2">{{> icon img='roll_small' }} &ge; {{{ risk }}}</div>
        <div class="target mdl-badge-left" data-badge="3">
          {{#gt target 0}}
            {{{ target }}} {{> icon img='target_small' }}
          {{else}}
            {{> icon img='target_small' }} {{{ target }}}
          {{/gt}}
        </div>
        {{#if damage }}
          <div class="damage mdl-badge-left" data-badge="4">{{{ damage }}} {{> icon img='damage_small' }}</div>
        {{/if}}
        {{#if hp }}
          <div class="hp mdl-badge" data-badge="4">+{{{ hp }}} {{> icon img='hp_small' }}</div>
        {{/if}}
        <div class="extras">{{{ Extras }}}</div>
      </div>
      <div class="abilitytext"><div class="child">{{{ abilitytext }}}</div></div>
    </article>
    <footer>
      <div class="flavortext">{{{ flavortext }}}</div>
      <div class="cardType">Ability</div>
    </footer>
  </div>
</div>