<footer>
  <div class="slot">
    {{#if Heavy}}<div class="heavy">heavy</div>{{/if}}
    {{#if Slot }}{{{ Slot }}}{{/if}}
  </div>
  <div class="cardType">
    {{#is cardType 'Ability' }}
      Requires {{{ Class }}}
      {{#is Class 'Music' }}
        instrument
      {{ else }}
        weapon
      {{/is}}
    {{ else }}
    {{{ cardType }}}
    {{/is}}
  </div>
  {{#if Worth}}
    <div class="worth">
      {{#gt Worth 0 }}<span>{{digitGrouping Worth }} gold</span>
      {{else}}no value{{/gt}}
    </div>
  {{/if}}
</footer>