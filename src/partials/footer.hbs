<footer>
  <div class="slot">
    {{#if Heavy}}<div class="heavy">heavy</div>{{/if}}
    {{#if Slot }}{{{ Slot }}}{{/if}}
  </div>
  <div class="cardType">
    {{#is cardType 'Ability' }}Requires {{{ Class }}} weapon
    {{ else }}
    {{{ cardType }}}
    {{/is}}
  </div>
  {{#if Worth}}
    <div class="worth mdl-badge" data-badge="3">
      {{#gt Worth 0 }}<span>{{digitGrouping Worth }} gold</span>
      {{else}}no value{{/gt}}
    </div>
  {{/if}}
</footer>